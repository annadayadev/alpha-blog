
<!--
    table
    tr - table row
    th - table header
    td - table data

-->


<h1>List of all the articles</h1>

    <!-- this will link to create new article page -->
<p>
    <%= link_to "Create new article", new_article_path %> 
</p>

<p>
     <%= link_to "About", pages_about_path %> | <%= link_to 'Home', pages_home_path %>
</p>

<table>
    <tr>
        <th> Title </th>
        <th> Description </th>
    </tr>
    
    <!--you can call this variable |article| anything you want -->
    <% @articles.each do |article| %>
    
    <tr>
    <!-- with equals because we're going to render something here -->
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %> </td>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %> </td>
    </tr>
    
    <!-- we would want to add a button/option for edit on every article on the list -->
    
    <% end %>
    
</table>